@model AuthorizeViewModel

<div class="jumbotron">
    <h1>Authorization</h1>

    <p class="lead text-left">Do you want to grant <strong>@Model.ApplicationName</strong> access to your data? (scopes requested: @Model.Scope)</p>

    <form method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" name="request_id" value="@Model.RequestId" />

        <input formaction="@Url.Action("submit.Accept")" class="btn btn-lg btn-success"  type="submit" value="Yes" />
        <input formaction="@Url.Action("submit.Deny")" class="btn btn-lg btn-danger"  type="submit" value="No" />
    </form>
</div>
