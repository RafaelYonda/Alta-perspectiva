@model AltaPerspectiva.Web.Areas.Admin.Models.CategoryViewModel
<style>
    .left-border {
        margin-top: 77px;
        height: 522px;
    }

    .customrow {
        min-height: 100vh;
    }

    .table {
        margin-left: 244px;
    }
    .form-horizontal {
        height: 522px;
    }
    .create-button {
        margin-left: 8.666667%;
    }
</style>
@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "icon-dice",
        Value = "icon-dice",
        Selected = true
    });
    listItems.Add(new SelectListItem
    {
        Text = "icon-chart",
        Value = "icon-chart"

    });
    //listItems.Add(new SelectListItem
    //{
    //    Text = "AWS",
    //    Value = "AWS"
