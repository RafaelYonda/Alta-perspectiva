{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "files": [
    "tsscripts/app/app.module.ts",
    "tsscripts/app/core/core.module.ts",
    "tsscripts/app/dashboard/dashboard.module.ts",
    "tsscripts/app/questions/question.module.ts",
    "tsscripts/app/shared/shared.module.ts",
    "tsscripts/main-aot.ts"
    
  ],
  "angularCompilerOptions": {
    "genDir": "./",
    "skipMetadataEmit": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}