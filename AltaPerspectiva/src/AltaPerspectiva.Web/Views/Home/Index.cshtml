@model dynamic
@{
    ViewData["Title"] = "Home Page";
}


@if (User?.Identity?.IsAuthenticated ?? false)
{
    if (!string.IsNullOrEmpty(Model) && !string.IsNullOrEmpty(User.Identity.Name))
    {
        <div class="body-minHeight">
            <app username="'@User.Identity.Name'" token="'@Model'">
                <div class="modal-overlay z-modal">
                    <div class="loader"></div>
                </div>
            </app>
        </div>
    }
}
else
{
    @*<div class="body-minHeight">
            <app username="">Loading ...</app>
        </div>*@
    <div class="body-minHeight">
        <app>
            <div class="modal-overlay z-modal">
                <div class="loader"></div>
            </div>
        </app>
    </div>
}

