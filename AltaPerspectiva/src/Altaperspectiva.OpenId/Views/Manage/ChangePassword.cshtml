@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambiar contraseña";
}

<h2>@ViewData["Title"].</h2>
<style>
    .form-horizontal {
        height: 379px;
    }
</style>
<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal col-md-6 col-md-offset-3" role="form">
    <div class="form-group">
        <label class="col-md-2 control-label">Contraseña actual</label>
        <div class="col-md-10">
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label  class="col-md-2 control-label">Nueva contraseña</label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label  class="col-md-2 control-label">Confirma tu nueva contraseña</label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Cambiar contraseña</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
