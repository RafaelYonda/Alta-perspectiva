<style>
    .loginForm {
        opacity: .95;
        margin-top: 57px;
        width: 577px;
        margin-left: 102px;
    }

    .form-horizontal {
        border-radius: 10px;
        height: 355px;
    }

    .login-header {
        text-align: center;
        margin-bottom: 26px;
        color: #5491c6;
        font-size: 21px;
    }

    .form-control {
        background-color: #cccccc;
        height: 41px;
        border-radius: 7px;
    }

    .btn-default {
        background-color: #fba409;
        border-radius: 10px;
        height: 45px;
        font-size: 21px;
        min-width: 174px;
    }
    .forget-password {
            margin-left: 4px;
    }
    .sign-up {
        text-align: center;
    }
</style>
<div class="row">
    <div class="col-md-2">
        @*<img class="left-border" src="~/images/border.png" />*@
        .
    </div>
    <div class="col-md-4 loginForm">

        <section>

            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                <div class="sign-up">Don't have an account?  <a href="/Account/Register">Sign up here</a></div>
                <h2 class="login-header">

                    Log in

                </h2>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-md-10">
                        <input asp-for="Email" placeholder="EMAIL ADDRESS" class="form-control" id="email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-md-10">
                        <input asp-for="Password" placeholder="PASSWORD" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-md-10">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                </div>
                <p class="col-sm-offset-1">
                    <a asp-action="ForgotPassword" class="forget-password">Forgot password?</a>
                </p>
            </form>
        </section>
    </div>
    <div class="col-md-3">
    </div>
</div>
<script>
    window.setTimeout(function () {
        document.getElementById('email').focus();
    }, 0);
</script>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
