@using Microsoft.AspNet.Identity
@using Ums.Live.Identity
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right user-menu hidden-xs">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.GetUserName() <span class="login"></span><span class="caret"></span></a>
            <ul class="dropdown-menu">
                @if (User.IsInRole(ApplicationRoles.Administrator))
                {
                    <li><a href="@Url.Action("Index", "User", new {area = "Settings"})">User management</a></li>
                    <li class="divider"></li>
                }
                <li><a href="@Url.Action("ChangePassword", "Manage", new { area="" })">Change password</a></li>
                <li class="divider"></li>
                <li>
                    @using (Html.BeginForm("LogOff", "Account", new { area=""}, FormMethod.Post, new { id = "logoutForm"}))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    }
                </li>
            </ul>
        </li>
    </ul>
    <ul class="nav navbar-nav navbar-right user-menu visible-xs hidden-sm">
        @if (User.IsInRole(ApplicationRoles.Administrator))
                {
            <li><a href="@Url.Action("Index", "User", new {area = "Settings"})">User management</a></li>
                    <li class="divider"></li>
        }
        <li><a href="@Url.Action("ChangePassword", "Manage", new { area="" })">Change password</a></li>
        <li class="divider"></li>
        <li>
            @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", }))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            }
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right user-menu">
        <li>
            <a href="@Url.Action("Login", "Account")">Log in <span class="login"></span></a>
        </li>
    </ul>
}
